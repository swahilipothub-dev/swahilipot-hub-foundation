<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">Industrial Attachments</h1>
        <a href="/admin/attachments/new" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i> Add New
        </a>
    </div>

    <!-- Active Filters -->
    <% if (currentFilters && (currentFilters.status || currentFilters.search)) { %>
        <div class="mb-3">
            <div class="d-flex align-items-center flex-wrap gap-2">
                <span class="me-2">Active filters:</span>
                <% if (currentFilters.status) { %>
                    <span class="badge bg-primary d-inline-flex align-items-center">
                        Status: <%= currentFilters.status.charAt(0).toUpperCase() + currentFilters.status.slice(1) %>
                        <a href="?<%= new URLSearchParams({...currentFilters, status: undefined}) %>" class="ms-2 text-white">
                            <i class="fas fa-times"></i>
                        </a>
                    </span>
                <% } %>
                <% if (currentFilters.search) { %>
                    <span class="badge bg-info text-dark d-inline-flex align-items-center">
                        Search: <%= currentFilters.search %>
                        <a href="?<%= new URLSearchParams({...currentFilters, search: undefined}) %>" class="ms-2">
                            <i class="fas fa-times"></i>
                        </a>
                    </span>
                <% } %>
                <a href="/admin/attachments" class="btn btn-sm btn-outline-secondary ms-2">
                    <i class="fas fa-times me-1"></i> Clear all
                </a>
            </div>
        </div>
    <% } %>

    <!-- Filters -->
    <div class="card mb-4">
        <div class="card-body">
            <form id="filterForm" class="row g-3">
                <div class="col-md-4">
                    <label for="status" class="form-label">Status</label>
                    <select name="status" id="status" class="form-select">
                        <option value="">All Status</option>
                        <option value="pending" <%= currentFilters?.status === 'pending' ? 'selected' : '' %>>Pending</option>
                        <option value="approved" <%= currentFilters?.status === 'approved' ? 'selected' : '' %>>Approved</option>
                        <option value="rejected" <%= currentFilters?.status === 'rejected' ? 'selected' : '' %>>Rejected</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <label for="search" class="form-label">Search</label>
                    <div class="input-group">
                        <input type="text" 
                               class="form-control" 
                               id="search" 
                               name="search" 
                               value="<%= currentFilters?.search || '' %>" 
                               placeholder="Search attachments...">
                        <button class="btn btn-outline-secondary" type="submit">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </div>
                <div class="col-md-4 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="fas fa-filter me-1"></i> Apply Filters
                    </button>
                    <a href="/admin/attachments" class="btn btn-outline-secondary">
                        <i class="fas fa-undo me-1"></i> Reset
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Attachments Table -->
    <div class="card">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>#</th>
                            <th>Student</th>
                            <th>Institution</th>
                            <th>Course</th>
                            <th>Year of Study</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (attachments && attachments.length > 0) { %>
                            <% attachments.forEach((attachment, index) => { %>
                                <tr>
                                    <td><%= index + 1 %></td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="avatar-sm bg-light rounded-circle me-2">
                                                <i class="fas fa-user text-primary"></i>
                                            </div>
                                            <div>
                                                <div class="fw-semibold"><%= `${attachment.first_name} ${attachment.last_name}` %></div>
                                                <small class="text-muted"><%= attachment.email %></small>
                                            </div>
                                        </div>
                                    </td>
                                    <td><%= attachment.institution?.name || 'N/A' %></td>
                                    <td><%= attachment.course?.name || 'N/A' %></td>
                                    <td><%= attachment.year_of_study || 'N/A' %></td>
                                    <td>
                                        <% 
                                            let badgeClass = 'bg-secondary';
                                            if (attachment.status === 'approved') badgeClass = 'bg-success';
                                            else if (attachment.status === 'rejected') badgeClass = 'bg-danger';
                                        %>
                                        <span class="badge <%= badgeClass %>">
                                            <%= attachment.status?.charAt(0).toUpperCase() + attachment.status?.slice(1) || 'Pending' %>
                                        </span>
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a href="/admin/attachments/<%= attachment._id %>" class="btn btn-link text-primary" title="View">
                                                <i class="far fa-eye"></i>
                                            </a>
                                            <button type="button" class="btn btn-link text-danger" title="Delete" 
                                                data-bs-toggle="modal" data-bs-target="#deleteModal" 
                                                data-id="<%= attachment._id %>">
                                                <i class="far fa-trash-alt"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            <% }); %>
                        <% } else { %>
                            <tr>
                                <td colspan="7" class="text-center py-4">
                                    <% if (error) { %>
                                        <div class="alert alert-danger"><%= error %></div>
                                    <% } else { %>
                                        <div class="text-muted">No attachments found</div>
                                    <% } %>
                                </td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            <div class="d-flex justify-content-between align-items-center p-3 border-top">
                <div class="text-muted">
                    Showing <span class="fw-semibold">1</span> to <span class="fw-semibold">10</span> of 
                    <span class="fw-semibold">24</span> entries
                </div>
                <nav aria-label="Page navigation">
                    <ul class="pagination pagination-sm mb-0">
                        <li class="page-item disabled">
                            <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Previous</a>
                        </li>
                        <li class="page-item active"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item">
                            <a class="page-link" href="#">Next</a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Confirm Deletion</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this attachment? This action cannot be undone.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmDelete">Delete</button>
            </div>
        </div>
    </div>
</div>

<script>
// Handle delete confirmation
const deleteModal = document.getElementById('deleteModal');
if (deleteModal) {
    deleteModal.addEventListener('show.bs.modal', function (event) {
        const button = event.relatedTarget;
        const attachmentId = button.getAttribute('data-id');
        
        document.getElementById('confirmDelete').onclick = function() {
            fetch(`/api/attachments/${attachmentId}`, {
                method: 'DELETE',
                headers: {
                    'Content-Type': 'application/json'
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    window.location.reload();
                } else {
                    alert('Error deleting attachment: ' + (data.message || 'Unknown error'));
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Error deleting attachment');
            });
        };
    });
}

// Handle filter form submission
document.addEventListener('DOMContentLoaded', function() {
    const filterForm = document.getElementById('filterForm');
    if (filterForm) {
        filterForm.addEventListener('submit', function(e) {
            e.preventDefault();
            
            const formData = new FormData(filterForm);
            const params = new URLSearchParams();
            
            // Only add non-empty values to the query params
            for (const [key, value] of formData.entries()) {
                if (value) {
                    params.append(key, value);
                }
            }
            
            // Update URL and reload the page with new filters
            const queryString = params.toString();
            window.location.href = queryString ? `?${queryString}` : window.location.pathname;
        });
    }
});
</script>
