<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">Dashboard</h1>
        <div class="d-flex">
            <div class="dropdown me-2">
                <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="dashboardFilterDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="fas fa-calendar-alt me-2"></i> Last 30 Days
                </button>
                <ul class="dropdown-menu" aria-labelledby="dashboardFilterDropdown">
                    <li><a class="dropdown-item active" href="#">Last 7 Days</a></li>
                    <li><a class="dropdown-item" href="#">Last 30 Days</a></li>
                    <li><a class="dropdown-item" href="#">Last 90 Days</a></li>
                    <li><a class="dropdown-item" href="#">This Year</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item" href="#">Custom Range</a></li>
                </ul>
            </div>
            <button class="btn btn-primary">
                <i class="fas fa-download me-2"></i> Export
            </button>
        </div>
    </div>
    
    <!-- Stats Cards -->
    <div class="row g-4 mb-4">
        <div class="col-sm-6 col-xl-3">
            <div class="card h-100 border-start border-primary border-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase text-muted mb-1">Total Users</h6>
                            <h2 class="mb-0"><%= stats.totalUsers.toLocaleString() %></h2>
                            <p class="text-success mb-0">
                                <i class="fas fa-arrow-up me-1"></i> 12.5% from last month
                            </p>
                        </div>
                        <div class="bg-primary bg-opacity-10 p-3 rounded">
                            <i class="fas fa-users fa-2x text-primary"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-top-0 pt-0">
                    <a href="/admin/users" class="text-decoration-none small">
                        View all users <i class="fas fa-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>
        </div>
        
        <div class="col-sm-6 col-xl-3">
            <div class="card h-100 border-start border-success border-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase text-muted mb-1">Active Attachments</h6>
                            <h2 class="mb-0"><%= stats.activeAttachments.toLocaleString() %></h2>
                            <p class="text-success mb-0">
                                <i class="fas fa-arrow-up me-1"></i> 8.3% from last month
                            </p>
                        </div>
                        <div class="bg-success bg-opacity-10 p-3 rounded">
                            <i class="fas fa-briefcase fa-2x text-success"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-top-0 pt-0">
                    <a href="/admin/attachments" class="text-decoration-none small">
                        View all attachments <i class="fas fa-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>
        </div>
        
        <div class="col-sm-6 col-xl-3">
            <div class="card h-100 border-start border-warning border-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase text-muted mb-1">Departments</h6>
                            <h2 class="mb-0"><%= stats.totalDepartments.toLocaleString() %></h2>
                            <p class="text-success mb-0">
                                <i class="fas fa-arrow-up me-1"></i> 4.2% from last month
                            </p>
                        </div>
                        <div class="bg-warning bg-opacity-10 p-3 rounded">
                            <i class="fas fa-building fa-2x text-warning"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-warning bg-opacity-25 border-0">
                    <a href="/admin/departments" class="text-dark text-decoration-none small">
                        View all departments <i class="fas fa-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>
        </div>
        
        <div class="col-md-6 col-xl-3">
            <div class="card bg-info text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase text-white-50 mb-1">Institutions</h6>
                            <h2 class="mb-0"><%= stats.totalInstitutions.toLocaleString() %></h2>
                        </div>
                        <div class="bg-white-25 p-3 rounded">
                            <i class="fas fa-university fa-2x"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-info bg-opacity-25 border-0">
                    <a href="/admin/institutions" class="text-white text-decoration-none small">
                        View all institutions <i class="fas fa-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Recent Activity and Quick Stats -->
    <div class="row g-4">
        <!-- Recent Activity -->
        <div class="col-lg-8">
            <div class="card h-100">
                <div class="card-header bg-white border-0 py-3">
                    <h5 class="mb-0">Recent Activity</h5>
                </div>
                <div class="card-body p-0">
                    <div class="list-group list-group-flush">
                        <% if (recentActivities.length > 0) { %>
                            <% recentActivities.forEach(activity => { %>
                                <div class="list-group-item border-0 py-3">
                                    <div class="d-flex">
                                        <div class="flex-shrink-0">
                                            <div class="avatar-sm bg-light rounded p-2 me-3">
                                                <i class="fas fa-<%= activity.icon %> text-<%= activity.color %>"></i>
                                            </div>
                                        </div>
                                        <div class="flex-grow-1">
                                            <div class="d-flex justify-content-between">
                                                <h6 class="mb-1"><%= activity.title %></h6>
                                                <small class="text-muted"><%= formatDate(activity.timestamp) %></small>
                                            </div>
                                            <p class="mb-0 text-muted"><%= activity.description %></p>
                                        </div>
                                    </div>
                                </div>
                            <% }) %>
                        <% } else { %>
                            <div class="text-center py-4">
                                <p class="text-muted mb-0">No recent activities found</p>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Quick Actions -->
        <div class="col-lg-4">
            <div class="card h-100">
                <div class="card-header bg-white border-0 py-3">
                    <h5 class="mb-0">Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="/admin/attachments/new" class="btn btn-primary">
                            <i class="fas fa-plus me-2"></i> Add New Attachment
                        </a>
                        <a href="/admin/users/new" class="btn btn-outline-secondary">
                            <i class="fas fa-user-plus me-2"></i> Add New User
                        </a>
                        <a href="/admin/departments/new" class="btn btn-outline-secondary">
                            <i class="fas fa-building me-2"></i> Add Department
                        </a>
                        <a href="/admin/institutions/new" class="btn btn-outline-secondary">
                            <i class="fas fa-university me-2"></i> Add Institution
                        </a>
                        <a href="/admin/courses/new" class="btn btn-outline-secondary">
                            <i class="fas fa-graduation-cap me-2"></i> Add Course
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
