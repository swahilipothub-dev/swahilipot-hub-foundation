<%- include('../partials/header', { title: 'Courses' }) %>

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">Courses</h1>
        <a href="/admin/courses/new" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i> Add New Course
        </a>
    </div>

    <div class="card">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>#</th>
                            <th>Name</th>
                            <th>Department</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (courses && courses.length > 0) { %>
                            <% courses.forEach((course, index) => { %>
                                <tr>
                                    <td><%= index + 1 %></td>
                                    <td><%= course.name %></td>
                                    <td><%= course.department?.name || 'N/A' %></td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a href="/admin/courses/<%= course._id %>/edit" class="btn btn-link text-warning" title="Edit">
                                                <i class="far fa-edit"></i>
                                            </a>
                                            <button type="button" class="btn btn-link text-danger" title="Delete">
                                                <i class="far fa-trash-alt"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            <% }); %>
                        <% } else { %>
                            <tr>
                                <td colspan="4" class="text-center py-4">
                                    <% if (error) { %>
                                        <div class="alert alert-danger"><%= error %></div>
                                    <% } else { %>
                                        <div class="text-muted">No courses found</div>
                                    <% } %>
                                </td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


